@using ECommerce.Dto.CatalogDtos.FeatureSliderDtos
@model UpdateFeatureSliderDto
@{
    ViewData["Title"] = "UpdateFeatureSlider";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>İndirim Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <input type="hidden" asp-for="FeatureSliderId" value="@Model?.FeatureSliderId" />
                        <label>Slider Başlık</label>
                        <input type="text" class="form-control" asp-for="Title" value="@Model?.Title" />
                        <br />
                        <label>Slider Açıklama</label>
                        <input type="text" class="form-control" asp-for="Description" value="@Model?.Description" />
                        <br />
                        <label>Slider Resim Url</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" value="@Model?.ImageUrl" />
                        <br />
                        <button class="btn btn-primary">İndirimi Güncelleme</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

