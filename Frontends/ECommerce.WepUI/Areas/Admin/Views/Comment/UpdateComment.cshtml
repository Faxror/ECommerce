@using ECommerce.Dto.CatalogDtos.CommentDtos
@model UpdateCommentDto
@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Yorum Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <input type="hidden" name="UserCommentId" value="@Model?.UserCommentId" />
                       
                        <label>Kullanıcı Adı Soyadı</label>
                        <input type="text" class="form-control" name="NameSurname" value="@Model?.NameSurname" />
                        <br />
                        <label>Kullanıcı Görsel</label>
                        <input type="text" class="form-control" name="İmageUrl" value="@Model?.İmageUrl" />
                        <br />
                        <label>Email Adresi</label>
                        <input type="text" class="form-control" name="Email" value="@Model?.Email" />
                        <br />
                        <label>Kullanıcı Puanı</label>
                        <input type="text" class="form-control" name="Rating" value="@Model?.Rating" />
                        <br />
                        <label>Yorum Tarihi</label>
                        <input type="date" class="form-control" name="CreatedDate" value="@Model?.CreatedDate" />
                        <br />
                        <label>Yorum </label>
                        <textarea class="form-control" name="CommentDetail" value="@Model?.CommentDetail" rows="3"> </textarea>
                        <br />
                        <input type="hidden" name="ProductId" value="@Model?.ProductId" />
                        <button class="btn btn-primary">Yorumu Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

