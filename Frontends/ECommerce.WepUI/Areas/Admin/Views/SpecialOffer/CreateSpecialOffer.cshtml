@using ECommerce.Dto.CatalogDtos.SpecialOfferDtos
@model CreateSpecialOfferDto
@{
    ViewData["Title"] = "CreateSpecialOffer";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>İndirim Ekleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <label>İndirim Başlığı</label>
                        <input type="text" class="form-control" name="Title" />
                        <br />
                        <label>İndirim Alt Başlığı</label>
                        <input type="text" class="form-control" name="SubTitle" />
                        <br />
                        <label>İndirim Resim Url</label>
                        <input type="text" class="form-control" name="ImageUrl" />
                        <br />
                        <button class="btn btn-primary">İndirimi Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


