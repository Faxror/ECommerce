@using ECommerce.Dto.CatalogDtos.ProductImageDtos
@model UpdateProductImageDto
@{
    ViewData["Title"] = "ProductImageDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Ürün Fotoğraf Güncelleme Sayfası</h4>
                <br />
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <input type="hidden" name="ProductImageID" value="@Model?.ProductImageID" />
                    
                        <label>Görsel 1</label>
                        <input type="text" class="form-control" name="Image1" value="@Model?.Image1" />
                        <br />
                        <label>Görsel 2</label>
                        <input type="text" class="form-control" name="Image2" value="@Model?.Image2" />
                        <br />
                        <label>Görsel 3</label>
                        <input type="text" class="form-control" name="Image3" value="@Model?.Image3" />
                        <br />
                        <input type="hidden" name="ProductID" value="@Model?.ProductID" />
                        <button class="btn btn-primary">Fotoğrafları Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


