
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="#">Ana Sayfa</a>
                <a class="breadcrumb-item text-dark" href="#">Ürünler</a>
                <span class="breadcrumb-item active">Ürün Liste</span>
            </nav>
        </div>
    </div>
</div>

    <!-- Breadcrumb End -->


    <!-- Shop Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <!-- Shop Sidebar Start -->
            <div class="col-lg-3 col-md-4">
                <!-- Price Start -->
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Filter by price</span></h5>
            @await Component.InvokeAsync("_PriceShortDefaultComponentPartial")
                <!-- Price End -->
            <!-- Color Start --> 
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Filter by color</span></h5>
            @await Component.InvokeAsync("_FilterShortDefaultComponentPartial")
                <!-- Color End -->

                <!-- Size Start -->
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Filter by size</span></h5>
               
            @await Component.InvokeAsync("_SizeShortDefaultComponentPartial")
                <!-- Size End -->
            </div>
            <!-- Shop Sidebar End -->


            <!-- Shop Product Start -->
        <div class="col-lg-9 col-md-8">
            <div class="row pb-3">
             @await Component.InvokeAsync("_FilerShowDefaultComponent")
                @await Component.InvokeAsync("_ShopProductListComponentPartial", new { id = ViewBag.i })
            @await Component.InvokeAsync("_PaginationComponentPartial")
              
            </div>
        </div>
            <!-- Shop Product End -->
        </div>
    </div>
    <!-- Shop End -->


